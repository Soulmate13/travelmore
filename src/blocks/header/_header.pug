mixin header
    .header
        .container
                .row
                    .col-12
                        .header__top
                            h1.header__title Bhromaon
                            p.header__subtitle Safe Travel Anywhere
                    .col-lg-8.offset-lg-2.col-md-12
                        .header__form-wrapper
                            form.header__form.d-flex(action="")
                                input.header__input.flex-grow-1(type="text" id="destination" name="your destination" placeholder="Search Your Travel Destination" required minlength="2")
                                label.header__label.header__label--submit
                                    svg.icons.icons--header
                                        use(xlink:href="#icon-search")
                                    input.header__input-submit.btn.btn--header(type="submit" value="SEARCH")
                    .col-12
                        a.header__link.d-flex.flex-column(href="#nav")
                            p.header__scroll-text.align-self-center Scroll down
                            svg.icons.icons--header.header__icon.align-self-center
                                use(xlink:href="#icon-angle-down")