mixin nav
    .nav#nav
        .container
            .row
                .col-12
                    .nav__wrapper.d-flex.justify-content-between
                        a.nav__link(href="#")
                            img.nav__logo(src="../../dist/img/logo.png" alt="bhromaon white logo")
                            img.nav__logo--alt(src="../../dist/img/logo-grey.png" alt="bhromaon grey logo")
                        input.nav__checkbox(type='checkbox' id='burger')
                        label.nav__burger(for='burger')
                            <i class="fas fa-bars"></i>
                            <i class="fas fa-times"></i>
                        ul.nav__list.d-flex.justify-content-lg-between.justify-content-md-around.align-items-center
                            li.nav__item
                                a.nav__item-link(href='#about') Who We Are
                            li.nav__item
                                a.nav__item-link(href='#panel') What We Do
                            li.nav__item
                                a.nav__item-link(href='#section-one') Travel With Us
                            li.nav__item 
                                a.nav__item-link(href='#footer') Contact Us
            